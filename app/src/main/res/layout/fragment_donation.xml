<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DonationFragment"
    android:background="@drawable/background_donation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is your information"
            android:textSize="25sp"
            android:layout_margin="20dp"
            />

        <!-- User Information TextViews -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:layout_marginBottom="12dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvUserCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City: "
            android:layout_marginBottom="12dp"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvUserBloodGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group: "
            android:layout_marginBottom="12dp"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvUserMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Mobile: "
            android:textSize="18sp" />

        <!-- Button to Post Donation -->
        <Button
            android:id="@+id/btnPostDonation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="Post Donation" />

    </LinearLayout>
</FrameLayout>
